@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/Login.css" />
    <title>Study tools</title>
    <script type="text/javascript">
        window.history.pushState(null, null, location.href);
        window.history.back();
        window.history.forward();
        window.onmouseout = function () {
            history.go(1);
        };
    </script>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">

                <form action="/SignUpLogin/Login" class="sign-in-form" method="post">
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Username" name="Username" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Password" name="Password"/>
                    </div>
                    <input type="submit" value="Login" class="btn solid" />

                </form>

                <form id="uploadForm" action="/SignUpLogin/SignUp" class="sign-up-form" method="post" enctype="multipart/form-data" >
                    <div class="validation-tip" id="validationTip"></div>
                    <h2 class="title">Sign up</h2>

                    <div class="profile-pic-container">
                        <input type="file" name="file" id="photoUpload" accept="image/*" onchange="previewPhoto(this)" hidden />
                        <div class="profile-pic" id="photoPreview"></div>
                        <label for="photoUpload" class="upload-icon">+</label>
                    </div>

                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Username" name="Username" id="userName" />
                    </div>

                    <div class="input-field">
                        <i class="fa fa-signature"></i>
                        <input type="text" placeholder="First Name" name="FirstName" id="firstName"/>
                    </div>

                    <div class="input-field">
                        <i class="fa fa-signature"></i>
                        <input type="text" placeholder="Last Name" name="LastName" id="lastName" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" placeholder="Email" name="Email" id="email" />
                    </div>
                    <div class="input-field">
                        <i class="fa fa-phone"></i>
                        <input type="text" placeholder="Phone Number" name="PhoneNumber" id="phoneNumber" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Password" name="Password" id="password" />
                    </div>
                    <input type="submit" class="btn" value="Sign up" id="signupBtn" />
                    <input type="reset" class="btn" value="Reset" />

                </form>

            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        Don't worry, Go and Register with us !
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
                <img src="/img/vecteezy_school-stationery-3d-icon-illustration_11472450.png" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        What are you doing here!! Go Login.
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="/img/todo.png" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="/js/Login.js"></script>
</body>
</html>
